<div class="container">
    <div class="row">
        
        <div class="col-md-3">
            <div>
                <%= render 'users/userinfo' %>
            </div>
            
            
            <div>
                <%= render 'books/newbook', book: @book %>
            </div>
        </div>
        
        <div class="col-md-8 offset-md-1">
          <h1>Books</h1>
          <table class="table table-hover table-inverse">
              <thead>
                  <tr>
                      <th></th>
                      <th  style="width:330px">Title</th>
                      <th  style="width:330px">Opinion</th>
                  </tr>
              <thead>
              
              <tbody>
                  <% @books.each do |book|%>
                    <tr>
                        <td><%= link_to user_path(@user.id) do%>
                               <%= image_tag 'default-image' %>
                            <% end %></td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body%></td>
                    </tr>
                  <% end %>
              </tbody>
          </table>
        </div>
        
        
    </div>
</div>