<div class="container">
    <div class="row">
        
        <div class="col-md-3">
            <div>
                <%= render 'users/userinfo', user: @user %>
            </div>
            
            
            <div>
                <%= render 'books/newbook', book: @book %>
            </div>
        </div>
        
        <div class="col-md-8 offset-md-1">
          <h1>Books</h1>
          <table class="table table-hover table-inverse">
              <thead>
                  <tr>
                      <th></th>
                      <th  style="width:330px">Title</th>
                      <th  style="width:330px">Opinion</th>
                      <th></th>
                      <th></th>
                  </tr>
              <thead>
              
              <tbody>
                  <% @books.each do |book|%>
                    <tr>
                        <td><%= link_to user_path(@user.id) do%>
                               <%= image_tag 'default-image' %>
                            <% end %></td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body%></td>
                            <td>
                            <% if book.favorited_by?(current_user) %>
                                <p>
                                  <%= link_to book_favorites_path(book), method: :delete do %>
                                    <i class="fas fa-heart" style="color: red;"></i><%= book.favorites.count %> 
                                  <% end %>
                                </p>
                            <% else %>
                                <p>
                                  <%= link_to book_favorites_path(book), method: :post do %>
                                    <i class="fas fa-heart" style="color: blue;"></i><%= book.favorites.count %> 
                                  <% end %>
                                </p>
                            <% end %>
                            </td>
                            <td>コメント件数：<%= book.book_comments.count %></td>
                    </tr>
                  <% end %>
              </tbody>
          </table>
        </div>
        
        
    </div>
</div>